
@{
    ViewBag.Title = "ClassView";
}

<h2>ClassView</h2>

@Html.TextBox("search")
<input type="submit" value="Search" />
<div align="right">
    @Html.TextBox("MockDateCreated", DateTime.Today.Date, new { @disabled = "disabled", @style = "border: none;" })
    @Html.Hidden("DateCreated", DateTime.Today)
</div>


<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Session 1
        </th>
        <th>
            Session 2
        </th>
        <th>
            Total Hours
        </th>
    </tr>
    @for (int i = 0; i < 10; i++)
    {
        <tr>
            <td>
                id
            </td>
            <td>
                first name
            </td>
            <td>
                surname
            </td>
            <td>
                session 1
            </td>
            <td>
                session 2
            </td>
            <td>
                total hours
            </td>
        </tr>
    }
</table>