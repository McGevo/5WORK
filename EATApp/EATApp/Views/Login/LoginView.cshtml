@model EATApp.Models.lecturer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginView</title>
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 10px 10px;
        }

        .field-validation-error {
            color:red;
        }

        body {
            background-image: url('../../Content/Images/adelaide-city.jpg');
        }
    </style>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Authorise", "Login", FormMethod.Post))

        {
            <table>
                <tr>
                    <td></td>
                    <td style="text-decoration:underline">Lecturer Login</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.EmailAddress)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.EmailAddress)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.EmailAddress)</td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.LecturerID)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.LecturerID)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.LecturerID)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                    </td>
                </tr>

            </table>
        }
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
