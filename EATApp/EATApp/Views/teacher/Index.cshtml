@model IEnumerable<EATApp.Models.StudentSession>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <div align="right">
        @Html.TextBox("MockDateCreated", DateTime.Today.Date, new { @disabled = "disabled", @style = "border: none;" })
        @Html.Hidden("DateCreated", DateTime.Today)
    </div>
</p>
<table class="table">
    <tr>
        <th>
            StudentID
        </th>
        <th>
            StudentName
        </th>

        <th>
            Session 1
        </th>
        <th>
            Session 2
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.StudentID)
    </td>
    <td>
        @{ var fullName = item.Student.FirstName + " " + item.Student.Surname;
            @Html.DisplayFor(modelItem => fullName)}
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SignIn)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SignOut)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey*/ })
    </td>
</tr>
}
